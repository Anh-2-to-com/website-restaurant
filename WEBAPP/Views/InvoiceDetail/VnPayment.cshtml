<div class="container-fluid bg-light py-6 my-6 mt-0">
    <div class="container text-center animated bounceInDown">
        <h1 class="display-1 mb-4">VNPayment</h1>
        <ol class="breadcrumb justify-content-center mb-0 animated bounceInDown">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item text-dark" aria-current="page">VNPayment</li>
        </ol>
    </div>
</div>

<div class="container-fluid menu bg-light py-6 my-6">
    <div class="container">
        <div class="row">
            @{
                if (ViewBag.Urls.Count > 0)
                {
                    for (int i = 0; i < ViewBag.Urls.Count; ++i)
                    {
                        <div class="col-4">
                            <div class="card">
                                <div class="card-header"><span class="card-title">InvoiceID: @i</span></div>
                                <div class="card-body">
                                    <p class="card-subtitle mb-2 text-muted">Link VNPay: <a
                                            href="@ViewBag.Urls[i]">@ViewBag.Urls[i]</a></p>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>